{
  "name": "meta-platform-workspace",
  "version": "1.13.0",
  "description": "Meta-platform workspace including the legacy quoting tool and new metabuild foundations.",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",
    "dev:api": "npm --workspace meta-api run dev",
    "dev:dashboard": "npm --workspace meta-dashboard run dev",
    "build": "npm run build:api && npm run build:dashboard",
    "build:api": "npm --workspace meta-api run build",
    "build:dashboard": "npm --workspace meta-dashboard run build",
    "lint": "npm run lint:api && npm run lint:dashboard",
    "lint:api": "npm --workspace meta-api run lint",
    "lint:dashboard": "npm --workspace meta-dashboard run lint",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "cap:update": "npx cap update"
  },
  "keywords": [
    "quote",
    "pricing",
    "window-cleaning",
    "pressure-cleaning",
    "mobile-app",
    "capacitor"
  ],
  "author": "925 Pressure Glass",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^9.0.1",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/camera": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/geolocation": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/push-notifications": "^6.0.0",
    "@capacitor/share": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "jsdom": "^27.2.0"
  }
}
