{
  "name": "tictacstick-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "TicTacStick Monorepo - Professional quoting tool for 925 Pressure Glass",
  "keywords": [
    "quote",
    "pricing",
    "window-cleaning",
    "pressure-cleaning",
    "mobile-app",
    "capacitor",
    "quasar",
    "vue3"
  ],
  "author": "925 Pressure Glass",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "v1"
  ],
  "devDependencies": {
    "@playwright/test": "1.56.1",
    "http-server": "14.1.1",
    "prisma": "5.14.0",
    "turbo": "2.0.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@capacitor/android": "6.0.0",
    "@capacitor/camera": "6.0.0",
    "@capacitor/cli": "6.0.0",
    "@capacitor/core": "6.0.0",
    "@capacitor/geolocation": "6.0.0",
    "@capacitor/haptics": "6.0.0",
    "@capacitor/ios": "6.0.0",
    "@capacitor/keyboard": "6.0.0",
    "@capacitor/push-notifications": "6.0.0",
    "@capacitor/share": "6.0.0",
    "@capacitor/status-bar": "6.0.0",
    "@prisma/client": "5.14.0",
    "jsdom": "27.2.0"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "scripts": {
    "test": "playwright test --config=v1/playwright.config.js",
    "test:headed": "playwright test --headed --config=v1/playwright.config.js",
    "test:ui": "playwright test --ui --config=v1/playwright.config.js",
    "test:debug": "playwright test --debug --config=v1/playwright.config.js",
    "dev:v1": "npx http-server v1 -p 8080 -c-1",
    "dev:quote-engine": "npm run dev --prefix apps/quote-engine",
    "dev:api": "npm run dev --prefix apps/meta-api",
    "dev:dashboard": "npm run dev --prefix apps/meta-dashboard",
    "dev": "npm run dev:api & npm run dev:dashboard",
    "build:packages": "npm run build --prefix packages/calculation-engine",
    "build:quote-engine": "npm run build --prefix apps/quote-engine",
    "build:api": "npm run build --prefix apps/meta-api",
    "build:dashboard": "npm run build --prefix apps/meta-dashboard",
    "build:all": "turbo run build",
    "start:api": "npm run start --prefix apps/meta-api",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "cap:verify": "node scripts/cap-verify.js",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "cap:update": "npx cap update",
    "audit:daily": "npm audit --omit=dev",
    "validate:config": "node scripts/validate-config.js",
    "prisma:deploy": "npx prisma migrate deploy --schema prisma/schema.prisma",
    "ci": "npm run build:api && npm run build:dashboard",
    "smoke": "node apps/meta-api/scripts/smoke.js",
    "model": "node scripts/copilot-model-selector.js"
  }
}
